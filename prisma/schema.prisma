// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bill {
  id             String   @id @default(cuid())
  billNumber     Int      @unique @default(autoincrement())
  vehicleNo      String
  customerName   String
  customerAddress String?
  route          String
  startMeter     Float
  endMeter       Float
  hireRate       Float
  allowedKm      Float    @default(0) // Standard included distance for packages
  waitingCharge  Float    @default(0)
  gatePass       Float    @default(0)
  packageCharge  Float    @default(0)
  advanceAmount  Float    @default(0) // Advance payment deducted
  totalAmount    Float
  currency       String   @default("LKR")
  exchangeRate   Float    @default(1.0)
  totalAmountLKR Float    @default(0)
  paymentMethod  String   @default("CASH") // CASH, CREDIT
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("bills")
}

model Vehicle {
  id                String   @id @default(cuid())
  vehicleNo         String   @unique
  model             String?
  category          String   @default("CAR") // CAR, VAN, SUV, etc.
  status            String   @default("ACTIVE") // ACTIVE, MAINTENANCE, RETIRED
  ratePerDay        Float    @default(0)    // daily hire rate
  kmPerDay          Float    @default(0)    // km allowance per day
  excessKmRate      Float    @default(0)    // charge per extra km
  extraHourRate     Float    @default(0)    // charge per extra hour
  seats             Int?     // Number of passenger seats
  acType            String?  // e.g. "Line AC", "Dual AC", "Roof AC", "No AC"
  features          String?  // Free-text specs: TV, sound system, seat type, etc.
  insuranceCoverage String?  // e.g. "Rs. 500,000 per passenger"
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("vehicles")
}

model BusinessProfile {
  id              String   @id @default(cuid())
  companyName     String   @default("My Transport Company")
  address         String?
  phone           String?
  email           String?
  website         String?
  usdRate         Float    @default(300.0)
  logoUrl         String?
  bankName        String?  // e.g. "BOC"
  bankBranch      String?  // e.g. "Delgoda"
  bankAccountNo   String?  // e.g. "80228624"
  bankAccountName String?  // e.g. "A.P. W. Jithsara"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("business_profile")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  mobile    String?
  email     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Booking {
  id           String   @id @default(cuid())
  vehicleNo    String
  customerName String
  startDate    DateTime
  endDate      DateTime?
  destination  String?
  status       String   @default("CONFIRMED") // CONFIRMED, CANCELLED, COMPLETED
  notes        String?
  advanceAmount Float    @default(0)
  refundStatus String?   // NULL, REFUNDED, FORFEITED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("bookings")
}

model TourSchedule {
  id                 String   @id @default(cuid())
  name               String
  description        String?
  days               Int
  basePricePerPerson Float    @default(0)
  vehicleCategory    String   @default("CAR")
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  items      TourScheduleDayItem[]
  quotations Quotation[]

  @@map("tour_schedules")
}

model TourScheduleDayItem {
  id             String @id @default(cuid())
  tourScheduleId String
  dayNumber      Int
  title          String
  description    String?
  distanceKm     Float  @default(0)
  accommodation  Float  @default(0)
  meals          Float  @default(0)
  activities     Float  @default(0)
  otherCosts     Float  @default(0)

  tourSchedule TourSchedule @relation(fields: [tourScheduleId], references: [id], onDelete: Cascade)

  @@map("tour_schedule_day_items")
}

model Quotation {
  id                 String    @id @default(cuid())
  quotationNumber    Int       @unique @default(autoincrement())
  tourScheduleId     String
  customerName       String
  customerEmail      String?
  customerPhone      String?
  vehicleNo          String?
  numberOfPersons    Int       @default(1)
  startDate          DateTime?
  hireRatePerDay     Float     @default(0)    // snapshot of vehicle rate/day
  kmPerDay           Float     @default(0)    // snapshot of km allowance/day
  totalDistance       Float     @default(0)
  transportCost      Float     @default(0)
  accommodationTotal Float     @default(0)
  mealsTotal         Float     @default(0)
  activitiesTotal    Float     @default(0)
  otherCostsTotal    Float     @default(0)
  markup             Float     @default(0)
  discount           Float     @default(0)
  driverCostPerDay   Float     @default(0)  // Driver meals & accommodation per day
  advanceAmount      Float     @default(0)  // Required advance payment
  excludedItems      String?   // e.g. "Highway charges, Parking fees"
  totalAmount        Float     @default(0)
  notes              String?
  validUntil         DateTime?
  status             String    @default("DRAFT")
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  tourSchedule TourSchedule @relation(fields: [tourScheduleId], references: [id])

  @@map("quotations")
}
